---
import { getEntryBySlug, getCollection, getEntry } from 'astro:content';
import Layout from '../../../../layouts/Layout.astro';
import JsonLd from '../../../../components/JsonLd.astro';
import FaqJsonLd from '../../../../components/FaqJsonLd.astro';
import DrugContentAccordions from '../../../../components/DrugContentAccordions.astro';

export async function getStaticPaths() {
  const all = await getCollection('combinations');
  return all.map((item) => ({ params: { combo: item.slug } }));
}

const params = Astro.params;
const entry = await getEntryBySlug('combinations', params.combo);
if (!entry) throw new Error('Combination not found: ' + params.combo);
const { data } = entry;
const { Content } = await entry.render();
const url = `${Astro.site || ''}/composition/combination/${entry.slug}/`;

// resolve ingredient names if possible
let ingredientNames = [];
if (data.ingredients?.length) {
  const resolved = await Promise.all(data.ingredients.map((i) => getEntry('compositions', i.generic_slug).catch(() => null)));
  ingredientNames = resolved.map((r) => r?.data?.title).filter(Boolean);
}
---

<Layout title={data.title} description={data.description}>
  <Fragment slot="head">
    <JsonLd type="combination" url={url} lastModified={data.lastModified} title={data.title} ingredients={ingredientNames} />
    {data.faqs ? <FaqJsonLd faqs={data.faqs} /> : null}
  </Fragment>
  
  <div class="combination-page">
    {data.is_banned && (
      <div class="banned-notice">
        <strong>⚠️ This combination is banned</strong>
      </div>
    )}

    <article class="combination-article" data-pagefind-body>
      <h1 class="combination-title">{data.title}</h1>
      
      {data.ingredients && (
        <div class="ingredients-section">
          <h2>Active Ingredients</h2>
          <div class="ingredients-grid">
            {data.ingredients.map((ing) => (
              <div class="ingredient-item">
                <span class="ingredient-name">{ing.generic_slug}</span>
                {ing.strength && <span class="ingredient-strength">{ing.strength}</span>}
              </div>
            ))}
          </div>
        </div>
      )}

      <div class="combination-content">
        <DrugContentAccordions primaryOverview={false}>
          <Content />
        </DrugContentAccordions>
        
        {data.faqs && data.faqs.length > 0 && (
          <div class="faq-card">
            <div class="faq-card-header">
              <h2 class="faq-card-title">
                <svg class="faq-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
                </svg>
                Frequently Asked Questions
              </h2>
            </div>
            <div class="faq-card-content">
              <div class="faq-accordion">
                {data.faqs.map((faq, index) => {
                  const faqId = `faq-${index + 1}`;
                  const cleanQuestion = faq.q.split('**A:**')[0].replace(/\*\*/g, '').trim();
                  return (
                    <details class="faq-item" id={faqId} key={`faq-${index}`}>
                      <summary class="faq-trigger">
                        <span class="faq-question">{cleanQuestion}</span>
                        <a href={`#${faqId}`} class="faq-anchor" aria-label={`Link to ${cleanQuestion}`}>
                          <svg class="faq-link-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"/>
                            <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"/>
                          </svg>
                        </a>
                        <svg class="faq-chevron" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <polyline points="6,9 12,15 18,9"/>
                        </svg>
                      </summary>
                      <div class="faq-content">
                        <p>{faq.a.replace(/^A:\*\*\s*/, '').replace(/^\*\*A:\*\*\s*/, '').trim()}</p>
                      </div>
                    </details>
                  );
                })}
              </div>
            </div>
          </div>
        )}
      </div>
    </article>
  </div>
</Layout>

<style>
  .combination-page {
    max-width: 900px;
    margin: 0 auto;
  }

  .banned-notice {
    background: linear-gradient(135deg, #fee2e2, #fecaca);
    border: 1px solid #fca5a5;
    color: #991b1b;
    padding: 12px 16px;
    border-radius: 8px;
    margin-bottom: 24px;
    font-weight: 500;
  }

  .combination-article {
    margin: 0;
    padding: 0;
  }

  .combination-title {
    font-size: 2rem;
    font-weight: 700;
    color: #1e293b;
    margin: 0 0 24px;
    line-height: 1.2;
    border-bottom: 2px solid rgba(99,102,241,0.1);
    padding-bottom: 16px;
  }

  .ingredients-section {
    margin-bottom: 32px;
    padding: 20px;
    background: rgba(248, 250, 252, 0.5);
    border-radius: 8px;
    border: 1px solid rgba(226, 232, 240, 0.6);
  }

  .ingredients-section h2 {
    color: #1e293b;
    font-weight: 600;
    margin: 0 0 16px;
    font-size: 1.25rem;
  }

  .ingredients-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 12px;
  }

  .ingredient-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 16px;
    background: white;
    border-radius: 6px;
    border: 1px solid rgba(226, 232, 240, 0.8);
  }

  .ingredient-name {
    font-weight: 500;
    color: #374151;
    text-transform: capitalize;
  }

  .ingredient-strength {
    font-size: 0.875rem;
    color: #6b7280;
    font-weight: 500;
  }

  .combination-content {
    color: #374151;
    line-height: 1.7;
  }

  /* FAQ Card Styles */
  .faq-card {
    background: rgba(255,255,255,0.9);
    border: 1px solid rgba(226,232,240,0.8);
    border-radius: 12px;
    margin-bottom: 32px;
    box-shadow: 0 2px 8px rgba(15,23,42,0.06);
  }

  .faq-card-header {
    padding: 20px 24px;
    border-bottom: 1px solid rgba(226,232,240,0.6);
  }

  .faq-card-title {
    display: flex;
    align-items: center;
    gap: 8px;
    margin: 0;
    font-size: 1.25rem;
    font-weight: 600;
    color: #1e293b;
  }

  .faq-icon {
    width: 20px;
    height: 20px;
    color: rgba(99,102,241,0.7);
  }

  .faq-card-content {
    padding: 20px 24px;
  }

  .faq-accordion {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .faq-item {
    border: 1px solid rgba(226,232,240,0.6);
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.2s ease;
  }

  .faq-item:hover {
    border-color: rgba(99,102,241,0.3);
    box-shadow: 0 2px 8px rgba(15,23,42,0.08);
  }

  .faq-trigger {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 16px 20px;
    background: rgba(248,250,252,0.5);
    cursor: pointer;
    font-weight: 500;
    color: #374151;
    transition: all 0.2s ease;
    list-style: none;
    gap: 12px;
  }

  .faq-trigger::-webkit-details-marker {
    display: none;
  }

  .faq-trigger:hover {
    background: rgba(248,250,252,0.8);
    color: #1e293b;
  }

  .faq-question {
    flex: 1;
    text-align: left;
  }

  .faq-anchor {
    display: inline-flex;
    align-items: center;
    padding: 4px;
    border-radius: 4px;
    color: #6b7280;
    text-decoration: none;
    opacity: 0;
    transition: all 0.2s ease;
    background: transparent;
  }

  .faq-trigger:hover .faq-anchor {
    opacity: 1;
  }

  .faq-anchor:hover {
    color: rgba(99,102,241,0.8);
    background: rgba(99,102,241,0.1);
  }

  .faq-anchor:focus {
    opacity: 1;
    outline: 2px solid rgba(99,102,241,0.5);
    outline-offset: 2px;
  }

  .faq-link-icon {
    width: 14px;
    height: 14px;
  }

  .faq-chevron {
    width: 16px;
    height: 16px;
    color: #6b7280;
    transition: transform 0.2s ease;
    flex-shrink: 0;
  }

  .faq-item[open] .faq-chevron {
    transform: rotate(180deg);
  }

  .faq-content {
    padding: 16px 20px;
    background: white;
    border-top: 1px solid rgba(226,232,240,0.4);
  }

  .faq-content p {
    margin: 0;
    color: #4b5563;
    line-height: 1.6;
  }

  /* Smooth scroll behavior for anchor links */
  html {
    scroll-behavior: smooth;
  }

  /* Highlight targeted FAQ */
  .faq-item:target {
    border-color: rgba(99,102,241,0.5);
    box-shadow: 0 4px 12px rgba(99,102,241,0.15);
  }

  .faq-item:target .faq-trigger {
    background: rgba(99,102,241,0.1);
  }

  @media (max-width: 768px) {
    .combination-page {
      margin: 0 16px;
    }

    .combination-article {
      padding: 0;
    }

    .combination-title {
      font-size: 1.75rem;
    }

    .ingredients-grid {
      grid-template-columns: 1fr;
    }

    .faq-card-header,
    .faq-card-content {
      padding: 16px 20px;
    }

    .faq-trigger,
    .faq-content {
      padding: 14px 16px;
    }
  }

  @media (max-width: 480px) {
    .combination-page {
      margin: 0 8px;
    }

    .combination-article {
      padding: 0;
    }

    .combination-title {
      font-size: 1.5rem;
    }

    .faq-card-header,
    .faq-card-content {
      padding: 14px 16px;
    }

    .faq-trigger,
    .faq-content {
      padding: 12px 14px;
    }

    .faq-card-title {
      font-size: 1.1rem;
    }
  }
</style>
